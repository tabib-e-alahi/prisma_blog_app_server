generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Post{
  id String @id @default(uuid())
  title String
  content String
  thumbnail String?
  isFeatured Boolean @default(false)
  status String
  tags String[]
  views Int @default(0)
  authorId String
}
