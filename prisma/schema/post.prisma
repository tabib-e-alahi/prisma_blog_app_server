enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Post {
  id         String     @id @default(uuid())
  title      String
  content    String
  thumbnail  String?
  isFeatured Boolean    @default(false)
  status     PostStatus @default(PUBLISHED)
  tags       String[]
  views      Int        @default(0)
  authorId   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  comments   Comment[]

  @@index([authorId])
  @@map("posts")
}